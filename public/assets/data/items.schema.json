{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the item"
    },
    "name": {
      "type": "string",
      "description": "Display name of the item"
    },
    "description": {
      "type": "string",
      "description": "Item description and effect explanation"
    },
    "type": {
      "type": "string",
      "enum": ["Pokeball", "Potion", "Key Item", "TM", "Berry", "Other"],
      "description": "Category of the item"
    },
    "effect": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["heal-hp", "heal-status", "catch-rate", "revive", "stat-boost", "key"],
          "description": "Type of effect"
        },
        "value": {
          "type": "number",
          "description": "Effect value (heal amount, catch rate bonus, etc.)"
        }
      },
      "description": "Optional effect when used"
    }
  },
  "required": ["id", "name", "description", "type"],
  "additionalProperties": false
}
